<!--pages/bookInfo/bookInfo.wxml-->
<view class='case-page'>
  <view class='item-masonry'>
    <view wx:for="{{zong2}}" class="product" >
      <view wx:if="{{item._id==id}}">
        <scroll-view  scroll-x="true">
        <view wx:for="{{item.imgurl}}" class="img" scroll-x="true">
            <image src='{{item}}' mode='widthFix'></image>
          </view>
        </scroll-view>
        <view class="name">{{item.bookname}}</view>
        <view class="price">商品价格：￥{{item.price}}</view>
        <view>获得方式：{{item.getfangshi}}</view>
        <view>联系方式：{{item.lxfs}}</view>
      </view>
    </view>
  </view>
</view>

<view>
  <button bindtap="buy">购买</button>
</view>